<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <ImageView
        android:id="@+id/article_item_img_image"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:src="@mipmap/minebg"
        android:layout_marginLeft="15dp"
        android:background="@color/colorGray"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/article_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是文章的标题"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:maxLines="2"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="标签"
                android:padding="2dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:id="@+id/article_item_tv_label"
                android:background="@drawable/article_label_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/article_item_tv_username"
                android:text="人民日报"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/article_item_tv_label"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>